<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Установка Параметров сети"
            android:textAlignment="center" />

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RadioButton
                android:id="@+id/s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Установка для SIM 1" />

        <RadioButton
                android:id="@+id/s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Установка для SIM 2" />

        <RadioButton
                android:id="@+id/co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Установка для SIM 1 + SIM 2" />
    </RadioGroup>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="При включёных моб. данных"
                android:textAlignment="viewStart" />

        <EditText
                android:id="@+id/mon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="3" />

        <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="При выключенных моб. данных"
                android:textAlignment="viewStart" />

        <EditText
                android:id="@+id/moff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="1" />

    </LinearLayout>

    <Button
            android:id="@+id/btn_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="29dp"
            android:text="Установить" />

    <Button
        android:id="@+id/on_mob_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="On/Off Mobile Data" />

    <Button
        android:id="@+id/off_mob_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="On/Off WiFi Data" />

</LinearLayout>